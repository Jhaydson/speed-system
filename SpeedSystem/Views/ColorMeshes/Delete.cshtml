                            <input type="submit" value="Deletar" class="btn btn-default" />
                        </div>
                    }

                    <table class="Highlight striped">
                        <thead class="">
                            <tr>
                                <th></th>
                                <th>Descrição</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.Color)</td>
                                <td>@Html.DisplayFor(model => model.Color)</td>

                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


