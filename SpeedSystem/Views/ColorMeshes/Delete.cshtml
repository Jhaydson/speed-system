@model SpeedSystem.Models.ColorMesh

@{
                /**/

                ViewBag.Title = "Delete";
}


<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12 center">
                <div id="card-alert" class="card gradient-45deg-amber-amber center">
                    <div class="card-content white-text">
                        <p>
                            <i class="material-icons">warning</i> Você tem certeza que costaria de excluir?
                        </p>
                       
                       @Html.ValidationSummary(true, "", new { @class = "white-text" })
                        
                    </div>
                    <button type="button" class="close white-text" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
