                                    @Html.EditorFor(model => model.Address[0].ZipCode, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Address[0].ZipCode, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class=" col s3">
                                <label>Quadra ou Rua</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Address[0].Block, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.Address[0].Block, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class=" col s1">
                                <label>@Html.DisplayNameFor(model => model.Address[0].Lot)</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Address[0].Lot, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Address[0].Lot, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class=" col s3">
                                <label>@Html.DisplayNameFor(model => model.Address[0].Neighborhood)</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Address[0].Neighborhood, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.Address[0].Neighborhood, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class=" col s3">
                                <label>@Html.DisplayNameFor(model => model.Address[0].City)</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Address[0].City, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.Address[0].City, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class=" col s2">
                                <label>@Html.DisplayNameFor(model => model.Address[0].State)</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Address[0].State, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.Address[0].State, "", new { @class = "text-danger" })

                                </div>
                            </div>
